<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoticeManagerProfesserActivity">

    <RelativeLayout
        android:id="@+id/student_notice_title_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#000000"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="30dp"
            android:text="공지사항"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/notice_list_professor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/student_notice_title_layout"
        android:background="#FFFFFF"/>

    <Button
        android:id="@+id/create_notic_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="작성"
        android:textColor="#FFFFFF"/>

</RelativeLayout>